pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Checkout source code from version control
                git 'https://github.com/thakurpr/java-tomcat-maven-example'
                
                // Build Maven project
                sh 'mvn clean package'
            }
        }
        
        stage('Deploy') {
            steps {
                // Deploy Maven artifact (e.g., JAR file)
                // You can deploy to a local directory, a remote server, or a cloud platform
                // For example, deploy to a local directory
                sh 'cp target/webapp-runner.jar /Users/thakur/desktop/deploy'
            }
        }
    }
}
